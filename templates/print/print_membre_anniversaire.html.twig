{% extends 'print/print_base.html.twig' %}

{% block title %}Anniversaire chorale AMBODIMERINA{% endblock %}

{% set mois = ['Janvier', 'Fevrier', 'Mars', 'Avril', 'May', 'Juin', 'Juillet', 'Août', 'Septembre','Octobre','Novembre','Décembre'] %}

{% block body %}
	<h1>Anniversaire chorale AMBODIMERINA</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="droite">Num</th>
                <th class="gauche">Date</th>
                <th class="gauche">Nom</th>
                <th class="gauche">Voix</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for membre in membres %}
            {% if membre.dateAnniversaire %}
                <tr>
                    <td class="droite">{{ i }}</td>
                    <td class="gauche">{{  membre.dateAnniversaire|date('d ') ~ mois[membre.dateAnniversaire|date('m')|number_format-1] }}</td>
                    <td class="gauche" >{{ membre.nom }}</td>
                    <td class="gauche">{{ membre.voix.abbreviation }}</td>
                </tr>
                {% set i = i+1 %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

{% endblock %}